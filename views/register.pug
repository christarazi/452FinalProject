extends base

block register
	link(href='signin.css', rel='stylesheet')
	if (!user)
		h1 Please register below.
		form.form-signin(method='POST')
			label.sr-only(for='inputUsername') Username
			input#inputUsername.form-control(name='username', type='text', placeholder='Enter your username', required='', autofocus='')
			label.sr-only(for='inputPassword') Password
			input#inputPassword.form-control(name='password', type='password', placeholder='Enter your password', required='', autofocus='')
			button.btn.btn-lg.btn-default(name='Register', type='submit') Register
			input(type='hidden', name='_csrf', value=csrfToken)
	script(src="register.js")